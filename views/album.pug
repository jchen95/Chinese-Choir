extends layout

block content

  .container
    h1.my-4.text-center.text-lg-left 照片
    .row.text-center.text-lg-left
      .col-lg-2
        ul.list-group
          li.list-group-item.list-group-item-dark 影集
          li.list-group-item
            a(href= '/pictures/album1') Album #1
          li.list-group-item
            a(href= '/pictures/album2') Album #2
          li.list-group-item
            a(href= '/pictures/album3') Album #3
      .col-lg-10
        .row
          for picture in pictures
            .col-lg-3.col-md-4.col-xs-6
              a.d-block.mb-4.h-100(href='/pictures/' + album + '/' + picture)
                img.img-fluid.img-thumbnail(src='/upload/' + album + '/' + picture, alt='')
  .row
    .col-lg-2
    .col-lg-7  
      nav(aria-label='breadcrumb')
      ol.breadcrumb
        form(method="POST",enctype="multipart/form-data",action="/pictures/" + album)
          input(type='file', name='filefield', multiple='multiple')
          button#btnSubmit.btn.btn-primary(type='submit') Submit 
          br 
        if typeof msg !=undefined
          br
          p= msg
        else
          p ""